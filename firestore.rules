rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId}/events/{eventId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create, update: if request.resource.data.type is string && request.resource.data.type in ["ENTRY", "EXIT"]
        && request.resource.data.occurredAt is string
        && request.resource.data.occurredTz is string
        && request.resource.data.createdAt is string
        && request.resource.data.updatedAt is string
        && request.resource.data.source is string && request.resource.data.source in ["quick", "custom", "import"]
        && (request.resource.data.notes is string || request.resource.data.notes == null)
        && request.resource.data.keys().size() <= 8;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}